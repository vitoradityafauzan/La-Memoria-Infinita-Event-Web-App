    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "prisma": "^5.19.1",
    "tsc-alias": "^1.8.10",
    "tsconfig": "*",
    "turbo": "latest"
  },
  "name": "finpro-nextjs-express-prisma",
